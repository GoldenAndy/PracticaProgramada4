<div class="row g-4">


    <div class="col-12">
        <h6 class="mb-2">Actualizar por ID</h6>
        <form id="formActualizarId" class="row g-2 align-items-end">

            <div class="col-12 col-md-4">
                <label class="form-label">ID</label>
                <input type="text" name="id" class="form-control" placeholder="ObjectId" required />
                <div class="form-text">Tip: clic en un ID del listado para autocompletar.</div>
            </div>
            <div class="col-12 col-md-4">
                <label class="form-label">Nuevo nombre</label>
                <input type="text" name="nombreNuevo" class="form-control" placeholder="Opcional" />
            </div>
            <div class="col-6 col-md-2">
                <label class="form-label">Edad</label>
                <input type="number" name="edad" class="form-control" min="0" step="1" placeholder="Opc." />
            </div>
            <div class="col-6 col-md-2">
                <label class="form-label">Ciudad</label>
                <input type="text" name="ciudad" class="form-control" placeholder="Opcional" />
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-primary">Actualizar</button> 
            </div>
        </form>
    </div>

    <hr class="my-2" />


    <div class="col-12">
        <h6 class="mb-2">Eliminar por ID</h6>
        <form id="formEliminarId" class="row g-2 align-items-end">
            <div class="col-12 col-md-6">
                <label class="form-label">ID</label>
                <input type="text" name="id" class="form-control" placeholder="ObjectId" required />
                <div class="form-text">Tip: clic en un ID del listado para autocompletar.</div>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-danger">Eliminar</button> 
            </div>
        </form>
    </div>

</div>
