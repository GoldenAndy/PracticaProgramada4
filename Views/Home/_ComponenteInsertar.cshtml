<div class="col-12 animate-section" style="animation-delay:.1s;">
    <div class="card-clean">

        <div class="section-title" style="border-left-color:#198754; color:#198754;">
            <i class="bi bi-person-plus"></i> Registrar Nuevo Cliente
        </div>

        <form id="formInsertar" class="row gy-3">

            <div class="col-12 col-md-6">
                <label class="form-label">Nombre</label>
                <input type="text" name="nombre" class="form-control" placeholder="Ej. Mario" required>
            </div>

            <div class="col-12 col-md-3">
                <label class="form-label">Edad</label>
                <input type="number" name="edad" class="form-control" min="0" step="1" placeholder="Ej. 35" required>
            </div>

            <div class="col-12">
                <button type="submit" class="btn btn-outline-success btn-custom">
                    <i class="bi bi-check2-circle me-1"></i> Registrar
                </button>
            </div>

        </form>
    </div>
</div>






