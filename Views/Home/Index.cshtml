@{
    ViewData["Title"] = "Clientes – Práctica Programada 4";
}

<div class="container py-4">
    <h1 class="mb-4">Gestión de Clientes</h1>

    <div id="alertGlobal" class="alert d-none" role="alert"></div>

    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header">
                    <strong>Listado de clientes</strong>
                </div>
                <div class="card-body" id="zonaListado">
                    <div class="text-center py-4">
                        <div class="spinner-border" role="status" aria-hidden="true"></div>
                        <div class="mt-2">Cargando listado…</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <strong>Insertar cliente</strong>
                </div>
                <div class="card-body" id="zonaInsertar">
                    <div class="text-center py-4">
                        <div class="spinner-border" role="status" aria-hidden="true"></div>
                        <div class="mt-2">Cargando formulario de inserción…</div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header">
                    <strong>Actualizar y eliminar</strong>
                </div>
                <div class="card-body" id="zonaActualizarEliminar">
                    <div class="text-center py-4">
                        <div class="spinner-border" role="status" aria-hidden="true"></div>
                        <div class="mt-2">Cargando formulario de actualización y eliminación…</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/clientes.js" asp-append-version="true"></script>
}
